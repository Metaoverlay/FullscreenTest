<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    android:screenOrientation="landscape"
    tools:context=".FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#33b5e5"
        android:textStyle="bold" android:textSize="50sp"
        android:text="@string/dummy_content" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/testpicture"
        android:layout_gravity="center_horizontal|left">

        <!--android:background="@android:color/holo_red_dark" -->

        <SurfaceView
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:id="@+id/surfaceViewPlatform1"

            android:background="#ffffffff"
            android:clickable="true"
            />

        <SurfaceView
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:id="@+id/surfaceViewPlatform2"

            android:background="#ff221cff"
            android:clickable="true"
            />
        <SurfaceView
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:id="@+id/surfaceViewPlatform3"

            android:background="#ff221cff"
            android:clickable="true"
            />
        <SurfaceView
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:id="@+id/surfaceViewPlatform4"

            android:background="#ff221cff"
            android:clickable="true"
            />

        <SurfaceView
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:id="@+id/surfaceViewPlatform5"

            android:background="#ff221cff"
            android:clickable="true"
            />

        <SurfaceView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/surfaceView"
            android:layout_gravity="center"
            android:background="#ff221cff"
            android:clickable="true"
            android:onClick="myFancyMethod"
            />

        <com.example.ccooper.fullscreentest.util.AnimationView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/BigSquare"
            android:layout_gravity="center"
            android:background="#55221c55"
            android:clickable="true"
            android:onClick="myFancyMethod"
            />

        <TextView
            android:layout_width="148dp"
            android:layout_height="45dp"
            android:text="New Text"
            android:id="@+id/timerTextView"
            android:layout_gravity="left|top" />

    </FrameLayout>

</FrameLayout>
